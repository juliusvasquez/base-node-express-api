{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:eslint-plugin/recommended",
        "airbnb-base"
    ],
    "plugins": [
        "eslint-plugin"
    ],
    "rules": {
        "no-console": 0,
        "no-tabs": 0,
        "no-new": 0,
        "comma-dangle": [1, "never"],
        "space-before-function-paren": [1, "always"],
        "import/prefer-default-export": 0
    }
  }